{
    "openapi": "3.0.0",
    "info": {
      "title": "API con restricciones",
      "version": "1.0.0"
    },
    "paths": {
      "/users/{id}": {
        "get": {
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string",
                "minLength": 5,
                "pattern": "^[a-zA-Z0-9]+$"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Un usuario"
            }
          }
        }
      }
    }
  }